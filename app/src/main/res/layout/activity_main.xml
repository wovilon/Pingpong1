<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="wovilon.pingpong1.MainActivity"
    android:background="@drawable/menubackground"
    tools:actionBarNavMode="@color/colorPrimaryDark">

    <Button
        android:text="@string/btNewGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="onBtNewGame"
        android:textColor="@color/text_color"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button1"
        android:layout_marginTop="17dp"
        android:onClick="onHowClick"
        android:text="@string/level_editor"
        android:textColor="@color/text_color"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/button3"
        android:textColor="@color/text_color"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="normal|bold"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:onClick="onSettingsClick" />

    <Button
        android:text="@string/Contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/button4"
        android:textColor="@color/text_color"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="normal|bold"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:onClick="onContactsClick" />

    <Button
        android:id="@+id/Button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button4"
        android:layout_marginTop="17dp"
        android:onClick="onExitClick"
        android:text="@string/Exit"
        android:textColor="@color/text_color"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="normal|bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:rotation="350"
        android:singleLine="false"
        android:text="Alfa version"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
